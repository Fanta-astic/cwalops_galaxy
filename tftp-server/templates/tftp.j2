# Configuration managed by Ansible
#{{ansible_date_time.date}} {{ansible_date_time.time}}
service tftp
{
 	socket_type		= dgram
  	protocol		= udp
  	wait			= yes
  	user			= root
  	server			= /usr/sbin/in.tftpd
  	server_args		= -c -s {{tftp_dir}}
  	disable			= no
  	per_source		= 11
  	cps			= 100 2
	flags			= IPv4
}
